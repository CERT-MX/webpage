@media screen and (min-width: 768px) and (max-width: 1199px)
  grid_generator(columns - 10, gutter - 10)
  grid_offset(columns - 10, gutter - 10)
  grid_centered(columns - 10, gutter - 10)

  #home
    #slogan
      width: 540px
      height: 260px
      margin-top: -130px
      margin-left: -270px

      .logo
        width: 380px
        height: 170px

  #menu
    height: 80px

    .menus
      width: 768px

      .link
        margin: 16px 0px

      .socials
        width: 30%

        a
          width: 50px

      .show-menu
        display: none
