//
// ui/base
// --------------------------------------------------

*
  margin: 0
  padding: 0
  border: 0
  font-size: 100%

html, body
  width: 100%
  height: 100%
  line-height: 1.250em
  font: 14px 'Roboto', Helvetica, Arial, sans-serif
  color: text-color
  background-color: white

article,
aside,
details,
div,
figcaption,
figure,
footer,
header,
hgroup,
nav,
section
  display: block

  img
    width: 100%

audio,
canvas,
video
  display: inline-block

audio:not([controls])
  display: none

.container, .row
  display: table
  position: relative
  margin: 0 auto
  width: 100%

[class *="centered"]
  text-align: center
